<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GalaxyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/GalaxyToolBarTitleTextAppearance</item>
        <item name="android:background">@android:color/black</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleCentered">true</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="popupTheme">@style/Theme.GalaxySample.PopupOverlay</item>
    </style>

    <style name="GalaxyToolBarTitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>